@model Dormitory.ViewModels.AddressVM
@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .myBorder {
        border: 1px;
    }

    .noPadding {
        padding-top: 50px;
        padding-bottom: 2px;
    }

    .position {
        position: relative;
        left: -5px;
        top: -13px;
    }

    .controlColWidth {
        width:500px;
    }

    .divAdjust {
        height: 35px;
        width: 300px;
        border: 1px solid blue;
        overflow: hidden;
    }
</style>

