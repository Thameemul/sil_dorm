@model Dormitory.ViewModels.AddressVM
@{
  ViewBag.Title = "Address";
}

<fieldset>
  <legend>Address Details</legend>
  @using (Html.BeginForm())
  {
    @Html.ValidationSummary()

    <div class="form-horizontal">

      <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-xs-4">
          <input class="form-control" id="Name" type="text" />
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Address</label>
        <div class="col-xs-4">
          <input class="form-control" id="Address1" type="text" />
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-xs-4">
          <input class="form-control" id="Address2" type="text" />
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Country</label>
        <div class="col-xs-4">
          @Html.DropDownListFor(m => m.CountryId, new SelectList(Model.Countries, "CountryId", "CountryName"), "< Select >", new { id = "Country", @class = "form-control" })
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">State</label>
        <div class="col-xs-4">
          @Html.DropDownListFor(m => m.StateId, new SelectList(Model.States, "StateId", "StateName"), "< Select >", new { id = "State", @class = "form-control" })
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">City</label>
        <div class="col-xs-4">
          @Html.DropDownListFor(m => m.CityId, new SelectList(Model.Cities, "CityId", "CityName"), "< Select >", new { id = "CityId", @class = "form-control" })
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Pin Code</label>
        <div class="col-xs-4">
          <input class="form-control" id="pincode" type="text" />
        </div>
      </div>

      <div class="text-center">
        <button id="btnSave" type="button" title="Save address details" class="btn btn-default btn-lg">Save</button>
        <button id="btnCancel" type="button" class="btn btn-default btn-lg" onclick="location.href='@Url.Action("ViewCart", "Cart")'">Cancel</button>
      </div>
    </div>
  }
</fieldset>
<script src="~/Scripts/Address/Address.js"></script>