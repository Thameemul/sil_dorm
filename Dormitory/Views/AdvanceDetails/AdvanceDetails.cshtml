@model Dormitory.ViewModels.AdvanceDetailsVM
@{
    ViewBag.Title = "Advance Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (@Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="border" style="width: 60%; margin: auto;">
        <div class="form-group">
            <div class="siteBackColor fontBold fontSize12pt ForeColorwhite centerAlign">
                Advance Details
            </div>
        </div>
        @* Container for all controls   *@
        <div id="content" style="width: 80%; margin: auto; height: 70%;">
            @* Table Header (TH)   *@


            <div class="form-group">
                <label class="control-label col-sm-2 Caption" style="width: 30%;">
                    @Html.LabelFor(model => model.Name)
                </label>
                <div class="dropdown ">
                    @Html.TextBoxFor(model => model.Name, new {id = "txtName", style = "width:250px", @class = "form-control border"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 Caption" style="width: 30%;">
                    @Html.LabelFor(model => model.RoomNo)
                </label>
                <div class="dropdown ">
                    @Html.TextBoxFor(model => model.RoomNo, new {id = "txtRoomNo", style = "width:250px", @class = "form-control border"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 Caption" style="width: 30%;">
                    @Html.LabelFor(model => model.BookingDate)
                </label>
                <div class="dropdown ">
                    @Html.TextBoxFor(model => model.BookingDate, new {id = "txtBookingDate", style = "width:250px", @class = "form-control border"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 Caption" style="width: 30%;">
                    @Html.LabelFor(model => model.Amount)
                </label>
                <div class="dropdown ">
                    @Html.TextBoxFor(model => model.Amount, new {id = "txtAmount", style = "width:250px", @class = "form-control border"})
                </div>
            </div>
            <hr/>
            
            @* Devider line   *@
            <div class="form-group " style="width:100%">
                <div class="Caption  border">
                </div>
            </div>

            <div class="row" style=" margin: auto;" >

                <div class="col-md-12  centerAlign" style="margin: auto;">
                    <button type="btnSave" class="btn btn-default btn-md">Save</button>
                    <input type="button" value="Exit" class="btn btn-primary" onclick="location.href='@Url.Action("CheckIn", "CheckIn")'" />
                </div>

            </div>
            <br/>
        </div>
    </div>
}